{
	"name": "order-summary-component",
	"version": "1.0.0",
	"description": "![Design preview for the Order summary card coding challenge](./design/desktop-preview.jpg)",
	"main": "index.js",
	"scripts": {
		"compile:css": "sass --no-source-map styles/custom.scss:styles/custom.css --style expanded",
		"prefix:css": "postcss styles/custom.css -u autoprefixer -b \"last 10 versions\" -o styles/custom.prefixed.css",
		"compress:css": "sass --no-source-map styles/custom.prefixed.css:styles/custom.min.css --style compressed",
		"build": "npm-run-all compile:css prefix:css compress:css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rabbanisan/order-summary-component.git"
	},
	"author": "rabbanisan",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/rabbanisan/order-summary-component/issues"
	},
	"homepage": "https://github.com/rabbanisan/order-summary-component#readme",
	"devDependencies": {
		"autoprefixer": "^10.4.13",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.18",
		"postcss-cli": "^10.0.0",
		"sass": "^1.55.0"
	}
}
